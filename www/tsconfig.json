{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"traceResolution": false,
		"target": "es2017",
		"noImplicitAny": true,
		"downlevelIteration": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"experimentalDecorators": true,
		"lib": [
			"es2017",
			"dom"
		]
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [],
}
